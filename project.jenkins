#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }

    triggers {
        cron('H */8 * * *')
        pollSCM('* * * * *')
    }

    stages {
        stage("build") {
            steps   {
                echo 'build'
            }
        }

        stage("unit-tests") {
            steps   {
                echo 'unit tests'
            }
        }
        stage("ui-tests") {
            steps {
                echo 'ui tests'
            }
        }
        stage("sonar-scanner") {
            steps {
                echo 'sonar-scanner'
            }
        }

    }
}